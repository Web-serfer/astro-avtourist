---
const {frontmatter} = Astro.props;
import { Icon } from 'astro-icon'
---

<a href={`/${frontmatter.slug}`}>    
    <div class='card--article-preview'>      
        <div class="article-preview__body">          
          <h3>
            <Icon 
              pack="mdi" 
              name="comment-alert" 
              size={20}
            />
          </h3>
            <div>
              <strong>{frontmatter.title}</strong>
              <br/>
              <small>{frontmatter.descr} </small>             
            </div>
        </div>
        <Icon 
          pack="ri" 
          name="arrow-right-circle-line" 
          size={20} 
        />
    </div>
  </a>

