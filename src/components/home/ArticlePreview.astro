---


const {frontmatter} = Astro.props;
import { FileText, ArrowRight, Calendar} from 'react-feather';
---

<a href={`/${frontmatter.slug}`}>
    
    <div class='card--article-preview'>
      
        <div class="article-preview__body">
           <h3><FileText size={30}/></h3>
            <div>
              <strong>{frontmatter.title}</strong>
              <br/>
              <small>{frontmatter.read_time} мин. чтения</small>
              <!-- <small>{frontmatter.tags.map(tag => (
                <span>{tag} {frontmatter.tags[frontmatter.tags.length-1] != tag && ','} </span>
              ))}</small> -->
            </div>
        </div>

        <ArrowRight size={18}/>
    </div>
  </a>

  <style>
    h3{
      line-height: 0;
    }
  </style>
