---
const navLinks = [
  {url: '/', title: 'Главная'},
  {url: '/blog', title: 'Блог'},
  {url: '/documents', title: 'Документы'},
  {url: '/faq', title: 'FAQ'}
]

export interface Props {
  src?: string;
  
}
  
const {
  src = '/logo.png'
  
} = Astro.props;
  
---


  

<header class="bg-[#18191a] py-4 sticky top-0">
  <div class="container flex flex-wrap items-center justify-center">
    <a class="logo" href="/">
      <img 
        class="logo" 
        src={src}
        width="50px"
        height="50px"
        alt="Автоюрист Сургут" 
      />
    </a>
    <nav>
      <ul role="navigation">
        {
          navLinks.map ((
            link =>
              <li>
                <a class="nav-link" href={link.url}>
                        {link.title}
                </a>
              </li>
            ))
        }                         
      </ul>
    </nav> 
  </div>             
</header>



<style>
  header {    
    box-shadow: var(--shadowBoxBottom);
  }   

  ul {
    display: flex;     
  }   

  header a {    
    color:#adb0b1;
    font-size: 1em;
  } 
  
  
  @media (max-width: 601px) {    
    header a {  
      margin: 0 1em;             
    }
	} 
  
  @media (max-width: 575px) {			

    .nav-link {
      font-size: .9em;     
      
    }

    header a {
      margin: 0 .5em;
      font-size: .9em;      
    }
	}    

  header a {
    margin: 0 1em;
    text-transform: uppercase;
  }

  
  @media (max-width: 467px) {
    .logo {
      padding-bottom: 5px;
    }
  }

  
  header a:hover {
    color: var(--mainLinkColor-light);
    transition: all .5s ease 0s;
  }

  

</style>





