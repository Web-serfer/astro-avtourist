---
export interface Props {
  yotube?: string;
  vk?: string;
  phone?: string;
}
  
const {
  youtube = 'YouTube',
  vk = 'ВКонтакте',
  phone = '+79222538375',
} = Astro.props;
  
---



<section class="section">
  <div class="socials-links">
    <a href="#" target="_blank">{youtube}</a>    
    <a href="#" target="_blank">{vk}</a>
    <a href="tel:+79222538375">{phone}</a> 
  </div>
</section>

<style>  
	.socials-links {
    display: flex;
    justify-content: flex-start;
    column-gap: 2em;
    flex-wrap: wrap;    
}


@media (max-width: 767px) {
  .menu--container {
    margin-top: 20px;
  }
}
  .socials-links a {
    font-weight: 600; 
    font-size: 1em;   
    text-transform: uppercase;
    color: var(--secondaryTextColor);    
    transition: all .7s;
    letter-spacing: .07em;
}

  .socials-links a:hover {
    font-weight: 600;
    color: var(--mainLinkColor-light);
    font-size: 1em;
}

@media (max-width: 390px) {
  .socials-links {
    font-size: .85rem;
  }
}
</style>