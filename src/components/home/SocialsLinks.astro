---
export interface Props {
  yotube?: string;
  vk?: string;
  phone?: string;
}
  
const {
  youtube = 'YouTube',
  vk = 'ВКонтакте',
  phone = '+79222538375',
} = Astro.props;
  
---



<section class="section">
  <div class="socials-links">
    <a href="#" target="_blank">{youtube}</a>
    <a href="#" target="_blank">{vk}</a>
    <a href="tel:+79222538375">{phone}</a> 
  </div>
</section>

<style>  
	.socials-links {
    display: flex;
    justify-content: flex-start;
    column-gap: 2em;
    flex-wrap: wrap;    
}

  .socials-links a {
    font-weight: 600;    
    text-transform: uppercase;
    color: var(--secondaryTextColor);
    font-size: 1em;
    transition: 0.3s;
    letter-spacing: .07em;
}

  .socials-links a:hover {
    font-weight: 100;
    color: var(--mainLinkColor-light);
    font-size: 0.9em;
}

@media (max-width: 390px) {
  .socials-links a {
    font-size: .80em;
  }
}
</style>