---
import VideoCard from '../home/VideoCard.astro'

export interface Props {
  heading?: string;  
}
  
const { 
  heading = "Видео материалы"  
} = Astro.props;

const videosData = [
  {title: 'Тема 1'},
  {title: 'Тема 2'},
  {title: 'Тема 3'},
  {title: 'Тема 4'},
  {title: 'Тема 5'},
  {title: 'Тема 6'}
];
---

<section>
    <div id="video"></div>
    <h3 class="underline underline-offset-8 decoration-dotted my-6">{heading}</h3>    

  <div id="video-wrapper"> 
    {videosData.map(video => (
        <VideoCard 
            title={video.title}          
          /> 
      ))}       
  </div>
</section>

<style>    
#video-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 1em;
}

@media(max-width: 800px) {
  #video-wrapper{    
    grid-template-columns: 1fr 1fr;    
  }
}

@media(max-width: 539px) {
  #video-wrapper{    
    grid-template-columns: 1fr;    
  }
}



@media (max-width: 536px) {
  .py-4 {
    font-size: .8em;
  }
}

</style>