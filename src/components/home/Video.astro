---
import VideoCard from '../home/VideoCard.astro'

export interface Props {
  heading?: string;
  text?: string;
}
  
const { 
  heading = "Видео материалы", 
  text = "Представляем вниманию наших Гостей видеоролики c полезным юридическим контентом на актуальные темы современности." 
} = Astro.props;
---


  

<section>
    <div id="video"></div>
    <h3>{heading}</h3>
    <p class="py-4">{text}</p>

  <div id="video-wrapper">           
      <VideoCard />   
      <VideoCard />   
  </div>
</section>

<style>    
#video-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 1em;
}

@media(max-width:800px) {
  #video-wrapper{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1em;
  }
}

@media (max-width: 536px) {
  .py-4 {
    font-size: .8em;
  }
}

</style>