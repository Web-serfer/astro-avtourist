---
import '../styles/home/main.css'
import Favicons from '../components/home/Favicons.astro'
import NavBar from '../components/home/NavBar.astro'
import Footer from '../components/home/Footer.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- Favicons icons -->
		<Favicons />
		
		<meta name="description" content="Автоюрист Сургута! Лишают прав? Попали в ДТП? Проблемы со Страховой? Звони +79222538375" />

    <meta name="keywords" content="автоюрист сургут, автоюрист в сургуте, лучший автоюрист в сургуте, консультации по дтп в сургуте, консультация автоюриста в сургуте" />
		<!-- Canonical link -->
		<link rel="canonical" href="https://avtourist-surgut.ru">

	
		<title>{title}</title>
	</head>
	<body>
		<NavBar/>
		<section class='container--main'>
			<slot />
		</section>
		<Footer />
	</body>
</html>


