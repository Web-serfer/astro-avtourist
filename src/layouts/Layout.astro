---
import '../styles/home/main.css'
import BaseHead from '../components/home/BaseHead.astro'
import Header from '../components/home/Header.astro'
import Footer from '../components/home/Footer.astro'

export interface Props {
	title?: string;
	description: string;
	keywords: string;
	canonical: string;
}

const { title, description, keywords, canonical } = Astro.props;
---


<!DOCTYPE html>
<html lang="ru">
	<head>		
		<BaseHead 
			title={title}
			description={description}
			keywords={keywords}
			canonical={canonical}	
		/> 
	</head>
	<body>
		<Header />
		<section class='container '>
			<slot />
		</section>
		<Footer />
	</body>
</html>




